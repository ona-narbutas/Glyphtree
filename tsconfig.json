{
  "compilerOptions": {
    "module": "CommonJS",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "types": ["react/next", "react-dom/next", "node", "express"],
    "outDir": "./dist",
  },
  "include": [
    "./client/*.ts",
    "./client/*.tsx",
    "./client/**/*.ts",
    "./client/**/*.tsx",
    "./server/*.ts",
    "./server/**/*.ts",
    "./server/**/**/*.ts", "client/index.jsx", "client/routes/EditPage.jsx", "client/components/App.jsx", "client/routes/EditPage.jsx",
  ]
}